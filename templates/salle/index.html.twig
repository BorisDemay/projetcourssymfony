{% extends 'base.html.twig' %}

{% block title %}Salle index{% endblock %}

{% block body %}
    <h1>Salle index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Batiment</th>
                <th>Materiels</th>
                <th>Locations</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for salle in salles %}
            <tr>
                <td>{{ salle.id }}</td>
                <td>{{ salle.nom }}</td>
                <td>{{ salle.batiment }}</td>
                <td>{% for materiel in salle.materiels %}
                {{ materiel.id }}<br>
                {% endfor %}</td>
                <td>{% for location in salle.locations %}
                    {{ location.nom }} {{ location.dateDebut|date("m/d/Y") }}<br>
                {% endfor %}</td>
                <td>
                    <a href="{{ path('salle_show', {'id': salle.id}) }}">show</a>
                    <a href="{{ path('salle_edit', {'id': salle.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('salle_new') }}">Create new</a>
{% endblock %}
